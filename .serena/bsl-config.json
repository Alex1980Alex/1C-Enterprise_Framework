{
  "language": "bsl",
  "diagnostics": {
    "skipSupport": ["BSL", "OSCRIPT"],
    "parameters": {
      "computeDiagnosticsSkipSupport": "never"
    }
  },
  "codeLens": {
    "showCognitiveComplexity": true,
    "showCyclomaticComplexity": true
  },
  "documentFormatting": {
    "alignAnnotation": true,
    "indentSpaceCount": 4
  },
  "trace": {
    "server": "messages"
  },
  "configurationRoot": "src/",
  "filePatterns": [
    "**/*.bsl",
    "**/*.os"
  ],
  "exclude": [
    "**/build/**",
    "**/dist/**",
    "**/.venv/**",
    "**/__pycache__/**"
  ]
}